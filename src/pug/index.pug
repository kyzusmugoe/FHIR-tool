doctype html
html
    include ./comps/header.pug
    body 
        span#debug
        .app
            //-include ./comps/landscape.pug
            header
                div
                    img(src="./img/logo.svg")
                div
                    span Project : 
                        span.projectID 
            .nav 
                div
                    button.main.caselist 選擇病例
                    span Case:
                        span.caseID
                    button.outline.nextCase 下一筆
                div
                    span 正確 
                        span.right 0
                    span 錯誤
                        span.wrong 0
                    span.status 未完成
                    button.main.send 完成送出

            .panelContainer
                #myArtical
                    .header
                        | 原文
                        label.switch
                            input(type="checkbox")
                            span.slider.round
                    .content
                        .ENG
                        .CHT.close
                #codeCtrl
                    .headerBox
                        .tabs
                        select(name="") 
                            option System labeling 
                    .content
                        table
                            thead 
                                tr 
                                    th#focus.close Focus
                                    th Source
                                    th Code
                                    th Code Name
                                    th Span Text
                                    th Confidence
                                    th 
                            tbody#codeRow
                            
                    .btns
                //-+AppBar
                //-+QPopup
                //首頁
                //-+QResult
                //列表
                //-include ./comps/list.pug
                //-+movType
                //播放器 
                //-include ./comps/count.pug
                //-include ./comps/player.pug
                //結束畫面
                //-include ./comps/end.pug
            //-include ./comps/loading.pug

            .modal.codeList.close
                .box
                    .header
                        p 選擇病例
                        button.main.closeBtn X
                    .content
                        p 處理中
                        .queue
                        p 未分析
                        .not
                        p 已完成
                        .done 
            .modal.sendCheck.close 
                .box
                    .header
                        p 確定是否送出
                        button.main.closeBtn X
                    .content
                        button.main.closeBtn 取消
                        button.main.doSend 確定